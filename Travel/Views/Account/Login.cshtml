@model Travel.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" id="Email" class="form-control" />
        <span id="email-error" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Mật khẩu</label>
        <input asp-for="Password" id="Password" type="password" class="form-control" />
        <span id="password-error" class="text-danger"></span>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Lưu tài khoản</label>
    </div>

    <button type="submit" class="btn btn-primary">Đăng Nhập</button>
    <a asp-action="ForgotPassword">Quên mật khẩu?</a>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#Password").on("input", function(){
                var password = $(this).val();
                var inputField = $(this);
                var errorSpan = $("#password-error");

                if (password.length < 8) {
                    errorSpan.text("Mật khẩu phải có ít nhất 8 ký tự.");
                    inputField.addClass("is-invalid");
                } else {
                    errorSpan.text("");
                    inputField.removeClass("is-invalid");
                }
            });          
        });
    </script>
}