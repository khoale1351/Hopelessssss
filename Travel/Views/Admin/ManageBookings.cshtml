@model IEnumerable<Travel.Models.Booking>

@{
    ViewData["Title"] = "Quản lý Đặt Tour";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Đặt Tour</h1>

    <!-- Thông báo thành công -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-calendar-check me-1"></i>
                Danh sách đặt tour
            </div>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="fas fa-plus me-1"></i> Thêm mới
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="bookingsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã đặt</th>
                            <th>Khách hàng</th>
                            <th>Tour</th>
                            <th>Ngày đặt</th>
                            <th>Ngày đi</th>
                            <th>Người lớn</th>
                            <th>Trẻ em</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thanh toán</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BookingId</td>
                                <td>@item.User.UserName</td>
                                <td>@item.Tour?.TourName</td>
                                <td>@item.BookingDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.NumberOfAdults</td>
                                <td>@item.NumberOfChildren</td>
                                <td>@item.TotalPrice.ToString("N0") VNĐ</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(item.Status)">
                                        @GetStatusDisplay(item.Status)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @GetPaymentBadgeClass(item.PaymentStatus)">
                                        @GetPaymentDisplay(item.PaymentStatus)
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.BookingId"
                                           class="btn btn-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.BookingId"
                                           class="btn btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger delete-btn"
                                                data-id="@item.BookingId" title="Xóa">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa đơn đặt tour này?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post">
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-secondary",
            "Confirmed" => "bg-primary",
            "Cancelled" => "bg-danger",
            "Completed" => "bg-success",
            _ => "bg-secondary"
        };
    }

    string GetStatusDisplay(string status)
    {
        return status switch
        {
            "Pending" => "Chờ xác nhận",
            "Confirmed" => "Đã xác nhận",
            "Cancelled" => "Đã hủy",
            "Completed" => "Hoàn thành",
            _ => status
        };
    }

    string GetPaymentBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Paid" => "bg-success",
            "Refunded" => "bg-info",
            _ => "bg-secondary"
        };
    }

    string GetPaymentDisplay(string status)
    {
        return status switch
        {
            "Pending" => "Chờ thanh toán",
            "Paid" => "Đã thanh toán",
            "Refunded" => "Hoàn tiền",
            _ => status
        };
    }
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Khởi tạo DataTable
            var table = $('#bookingsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                }
            });

            // Xử lý nút xóa
            $('.delete-btn').click(function() {
                var id = $(this).data('id');
                $('#deleteForm').attr('action', '@Url.Action("Delete")/' + id);
                $('#deleteModal').modal('show');
            });
        });
    </script>
}