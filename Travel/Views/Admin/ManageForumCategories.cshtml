@model IEnumerable<Travel.Models.ForumCategory>

@{
    ViewData["Title"] = "Quản lý danh mục diễn đàn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý danh mục diễn đàn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Quản lý danh mục diễn đàn</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-table me-1"></i>
                Danh sách danh mục
            </div>
            <div>
                <a asp-action="CreateForumCategory" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Thêm danh mục mới
                </a>
                <form asp-action="UpdateForumCategoriesPostCount" method="post" class="d-inline">
                    <button type="submit" class="btn btn-info">
                        <i class="fas fa-sync"></i> Cập nhật số lượng bài viết
                    </button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <table id="categoriesTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <th>Số bài viết</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.PostCount</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="EditForumCategory" asp-route-id="@item.CategoryId" 
                                       class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="DeleteForumCategory" asp-route-id="@item.CategoryId" 
                                          method="post" class="d-inline"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#categoriesTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json',
                },
            });
        });
    </script>
} 