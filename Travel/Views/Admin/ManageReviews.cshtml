@model IEnumerable<Travel.Models.Review>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý Đánh giá";
}

<h2>Danh sách Đánh giá</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Khách hàng</th>
            <th>Tour</th>
            <th>Đánh giá</th>
            <th>Bình luận</th>
            <th>Ngày đánh giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.ReviewId</td>
                <td>@(review.User?.UserName ?? "Không có thông tin")</td>
                <td>@(review.Tour?.TourId.ToString() ?? "Không có thông tin")</td>
                <td>
                    @for (int i = 0; i < review.Rating; i++)
                    {
                        <span>&#9733;</span>
                    }
                    @for (int i = review.Rating; i < 5; i++)
                    {
                        <span>&#9734;</span>
                    }
                </td>
                <td>@(review.Comment ?? "Không có bình luận")</td>
                <td>@review.ReviewDate?.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
