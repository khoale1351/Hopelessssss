@model Travel.ViewModels.UserDetailViewModel
@{
    ViewData["Title"] = "Chi tiết Người dùng";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-user me-2"></i> Thông tin Người dùng
            </h4>
            <a asp-action="ManageUsers" class="btn btn-light btn-sm">Quay lại</a>
        </div>
        <div class="card-body p-4">
            <!-- Avatar -->
            <div class="text-center mb-4">
                <img src="~/@Model.ProfilePictureUrl" alt="Avatar" class="img-thumbnail rounded-circle" style="width:150px; height:150px; object-fit:cover;" />
            </div>
            <!-- Thông tin chi tiết -->
            <dl class="row">
                <dt class="col-sm-3">Họ và Tên</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Địa chỉ</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Ngày sinh</dt>
                <dd class="col-sm-9">@Model.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Loại thành viên</dt>
                <dd class="col-sm-9">@Model.MembershipType</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Bị khóa</span>
                    }
                </dd>
            </dl>

            <div class="mt-4 d-flex gap-2">
                <button onclick="window.print()" class="btn btn-outline-primary">
                    <i class="fas fa-print me-1"></i> In thông tin
                </button>
                <a asp-controller="Admin" asp-action="ExportUserToPdf" asp-route-userId="@Model.Id" class="btn btn-outline-danger">
                    <i class="fas fa-file-pdf me-1"></i> Xuất PDF
                </a>
            </div>
        </div>
    </div>
</div>
