@model IEnumerable<Travel.Models.Tour>
@using System.Linq

@{
    ViewData["Title"] = "Home";
    
}

<!-- Hero Section -->
<section class="hero text-center py-5">
    <div class="container">
        <h1 class="display-4">Từ nơi đồng xanh thơm hương lúa đến mọi nơi theo ý bạn!</h1>
        <p class="lead">Tìm kiếm chuyến bay, khách sạn và dịch vụ du lịch một cách dễ dàng.</p>
    </div>
</section>

<!-- Search Flights Section -->
<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-body">
            <!-- Tabs -->
            <ul class="nav nav-tabs mb-3" id="serviceTabs">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#flight">Vé máy bay</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#hotel">Khách sạn</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#bus">Vé xe khách</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#airport">Đưa đón sân bay</a>
                </li>
            </ul>
            <!-- Nội dung từng tab -->
            <div class="tab-content mt-3">
                <div class="tab-pane fade show active" id="flight">
                    <!-- Form đặt vé máy bay giống ảnh trên -->
                    <!-- Flight Search Form -->
                    <form class="mt-3">
                        <div class="row g-3">
                            <div class="col-md-10">
                                <label for="flightType">Loại chuyến bay</label>
                                <select id="flightType" class="form-control">
                                    <option>Khứ hồi</option>
                                    <option>Một chiều</option>
                                </select>
                            </div>
                            <div class="col-md-5">
                                <label for="departureCity">Từ</label>
                                <input type="text" class="form-control" id="departureCity" placeholder="TP HCM (SGN)">
                            </div>
                            <div class="col-md-5">
                                <label for="destinationCity">Đến</label>
                                <input type="text" class="form-control" id="destinationCity" placeholder="Hà Nội (HAN)">
                            </div>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-md-5">
                                <label for="departureDate">Ngày khởi hành</label>
                                <input type="date" class="form-control" id="departureDate">
                            </div>
                            <div class="col-md-5">
                                <label for="returnDate">Ngày về</label>
                                <input type="date" class="form-control" id="returnDate">
                            </div>
                        </div>

                        <div class="d-flex flex-row gap-3 align-items-center">
                            <div class="col-md-4">
                                <label for="passenger">Hành khách</label>
                                <select class="form-control me-2" id="passenger">
                                    <option> Trẻ con </option>
                                    <option>1 Người lớn</option>
                                    <option>2 Người lớn</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="class">Hạng vé</label>
                                <select class="form-control" id="class">
                                    <option>Phổ thông</option>
                                    <option>Thương gia</option>
                                </select>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-12 align-self-end">
                                <button type="submit" class="btn btn-primary w-100">🔍 Tìm kiếm</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>


            <div class="tab-content mt-3">
                <div class="tab-pane fade " id="hotel">
                    <!-- Form đặt khách sạn -->
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="hotelLocation">Địa điểm</label>
                                <input type="text" class="form-control" id="hotelLocation" placeholder="Nhập địa điểm">
                            </div>
                            <div class="col-md-3">
                                <label for="checkIn">Ngày nhận phòng</label>
                                <input type="date" class="form-control" id="checkIn">
                            </div>
                            <div class="col-md-3">
                                <label for="checkOut">Ngày trả phòng</label>
                                <input type="date" class="form-control" id="checkOut">
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-12 align-self-end">
                                <button type="submit" class="btn btn-primary w-100">🔍 Tìm kiếm khách sạn</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="tab-content mt-3">
                <div class="tab-pane fade " id="bus">
                    <!-- Form đặt vé xe khách -->
                    <form>
                        <div class="row g-3">
                            <div class="col-md-5">
                                <label for="busDeparture">Từ</label>
                                <input type="text" class="form-control" id="busDeparture" placeholder="Nhập điểm đi">
                            </div>
                            <div class="col-md-5">
                                <label for="busDestination">Đến</label>
                                <input type="text" class="form-control" id="busDestination" placeholder="Nhập điểm đến">
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-5">
                                <label for="busDate">Ngày đi</label>
                                <input type="date" class="form-control" id="busDate">
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-12 align-self-end">
                                <button type="submit" class="btn btn-primary w-100">🔍 Tìm chuyến xe</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="tab-content mt-3">
                <div class="tab-pane fade " id="airport">
                    <!-- Form đưa đón sân bay -->
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="pickupLocation">Điểm đón</label>
                                <input type="text" class="form-control" id="pickupLocation" placeholder="VD: Sân bay Tân Sơn Nhất">
                            </div>
                            <div class="col-md-6">
                                <label for="dropoffLocation">Điểm đến</label>
                                <input type="text" class="form-control" id="dropoffLocation" placeholder="VD: Khách sạn ABC">
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-12 align-self-end">
                                <button type="submit" class="btn btn-primary w-100">🔍 Tìm xe</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Tours Section -->
<section class="featured-tours py-5">
    <div class="container">
        <h2 class="text-center mb-4">Tour nổi bật</h2>
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var tour in Model)
                {
                    <div class="col-md-4">
                        <div class="card shadow-lg">
                            <a href="/Tour/Details/@tour.TourId">
                                <img src="@tour.ImageUrl" class="card-img-top" alt="@tour.TourName" loading="lazy">
                            </a>
                            <div class="card-body">
                                <a href="/Tour/Details/@tour.TourId" class="text-decoration-none text-dark">
                                    <h5 class="card-title">@tour.TourName</h5>
                                </a>
                                @if (!string.IsNullOrEmpty(tour.Description))
                                {
                                    <p class="card-text">@tour.Description</p>
                                }
                                <p class="text-danger fw-bold">Giá: @tour.Price VNĐ</p>
                                <a href="/Tour/Details/@tour.TourId" class="btn btn-primary w-100">Đặt ngay</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center">Hiện tại không có tour nổi bật nào.</p>
        }
    </div>
</section>

<!-- Map Section -->
<section class="container my-5">
    <h2 class="text-center mb-4">Our Locations</h2>
    <div class="map-responsive">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.418521067304!2d106.7830318748582!3d10.855738189297893!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175276e7ea103df%3A0xb6cf10bb7d719327!2zSFVURUNIIC0gxJDhuqFpIGjhu41jIEPDtG5nIG5naOG7hyBUUC5IQ00gKFRodSBEdWMgQ2FtcHVzKQ!5e0!3m2!1svi!2s!4v1742285238402!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</section>
