@model IEnumerable<Travel.Models.Tour>
@using System.Linq

@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero text-center py-5">
    <div class="container">
        <h1 class="display-4">Từ nơi đồng xanh thơm hương lúa đến mọi nơi theo ý bạn!</h1>
        <p class="lead">Tìm kiếm chuyến bay, khách sạn và dịch vụ du lịch một cách dễ dàng.</p>
    </div>
</section>

<!-- Featured Tours Section -->
<section class="featured-tours py-5">
    <div class="container">
        <h2 class="text-center mb-4">Tour nổi bật</h2>
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var tour in Model)
                {
                    <div class="col-md-4">
                        <div class="card shadow-lg">
                            <a href="/Tour/Details/@tour.TourId">
                                <img src="@tour.ImageUrl" class="card-img-top" alt="@tour.TourName" loading="lazy">
                            </a>
                            <div class="card-body">
                                <a href="/Tour/Details/@tour.TourId" class="text-decoration-none text-dark">
                                    <h5 class="card-title">@tour.TourName</h5>
                                </a>
                                @if (!string.IsNullOrEmpty(tour.Description))
                                {
                                    <p class="card-text">@tour.Description</p>
                                }
                                <p class="text-danger fw-bold">Giá: @tour.Price VNĐ</p>
                                <a href="/Tour/Details/@tour.TourId" class="btn btn-primary w-100">Đặt ngay</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center">Hiện tại không có tour nổi bật nào.</p>
        }
    </div>
</section>

