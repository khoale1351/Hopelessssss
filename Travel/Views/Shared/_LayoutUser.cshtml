                            </a>
                            <div class="search-dropdown">
                                <ul class="dropdown-list"></ul>
                            </div>
                        </div>
                    </li>
                    <button id="toggleThemeBtn" class="btn btn-outline-light ms-2">🌗</button>
                    @if (SignInManager.IsSignedIn(User))
