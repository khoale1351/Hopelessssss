@model Travel.Models.Tour
@{
    ViewData["Title"] = "Xóa Tour";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid px-4">
    <h2 class="text-danger my-4">Bạn có chắc muốn xóa Tour này?</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.TourName</h5>
            <p class="card-text"><strong>Điểm đến:</strong> @Model.Destination?.Name</p>
            <p class="card-text"><strong>Giá:</strong> @Model.Price.ToString("N0") VNĐ</p>
            <p class="card-text"><strong>Thời gian:</strong> @Model.Duration ngày</p>
            <p class="card-text"><strong>Ngày khởi hành:</strong> @Model.StartDate.ToString("dd/MM/yyyy")</p>
            <p class="card-text"><strong>Ngày kết thúc:</strong> @Model.EndDate.ToString("dd/MM/yyyy")</p>
            <p class="card-text"><strong>Số chỗ:</strong> @Model.AvailableSeats</p>
            <p class="card-text text-danger">Lưu ý: Xóa tour sẽ xóa toàn bộ booking và đánh giá liên quan!</p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.TourId" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="fas fa-trash-alt me-1"></i> Xác nhận xóa
        </button>
        <a asp-controller="Admin" asp-action="ManageTours" class="btn btn-secondary">
            <i class="fas fa-times me-1"></i> Hủy
        </a>
    </form>
</div>