@model Travel.Models.Tour
@{
    ViewData["Title"] = "Xóa Tour";
}

<h2 class="text-danger my-4">Bạn có chắc muốn xóa Tour này?</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.TourName</h5>
        <p class="card-text">Điểm đến: @Model.DestinationId</p>
        <p class="card-text">Giá: @Model.Price.ToString("C")</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TourId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
