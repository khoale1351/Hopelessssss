@model Travel.ViewModels.TourViewModel
@{
    ViewData["Title"] = "Chi tiết Tour";
}
<div class="card my-4">
    <div class="card-header bg-primary text-white">
        <h4>@Model.TourName</h4>
    </div>
    <div class="card-body">
        <p><strong>Điểm Đến:</strong> @Model.DestinationName</p>
        <p><strong>Mô Tả:</strong> @Model.Description</p>
        <p><strong>Giá:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Ngày Bắt Đầu:</strong> @Model.StartDate</p>
        <p><strong>Ngày Kết Thúc:</strong> @Model.EndDate</p>
        <p><strong>Loại Tour:</strong> @Model.TourType</p>
        <p><strong>Trạng Thái:</strong> @Model.TourStatus</p>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Quay lại</a>
    </div>
</div>

