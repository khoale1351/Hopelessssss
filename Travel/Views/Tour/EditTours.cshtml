@model Travel.Models.Tour

@{
    ViewData["Title"] = "Chỉnh sửa Tour";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="TourId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TourName" class="form-label"></label>
                            <input asp-for="TourName" class="form-control" required />
                            <span asp-validation-for="TourName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DestinationId" class="form-label"></label>
                            <select asp-for="DestinationId" asp-items="ViewBag.DestinationOptions" class="form-control" required>
                                <option value="">Chọn điểm đến...</option>
                            </select>
                            <span asp-validation-for="DestinationId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Duration" class="form-label"></label>
                            <input asp-for="Duration" class="form-control" id="Duration" required />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AvailableSeats" class="form-label"></label>
                            <input asp-for="AvailableSeats" class="form-control" required />
                            <span asp-validation-for="AvailableSeats" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control" id="StartDate" required />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control" id="EndDate" required />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TourType" class="form-label"></label>
                            <select asp-for="TourType" class="form-control">
                                <option value="Private">Tour riêng</option>
                                <option value="Group">Tour nhóm</option>
                            </select>
                            <span asp-validation-for="TourType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TourStatus" class="form-label"></label>
                            <select asp-for="TourStatus" class="form-control">
                                <option value="Upcoming">Sắp diễn ra</option>
                                <option value="Ongoing">Đang diễn ra</option>
                                <option value="Completed">Đã hoàn thành</option>
                                <option value="Cancelled">Đã hủy</option>
                            </select>
                            <span asp-validation-for="TourStatus" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="imageInput">Hình ảnh</label>
                            <input type="file" name="ImageFile" class="form-control" accept="image/*" id="imageInput" />
                            <div class="mt-2" id="imagePreview">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Url.Content($"~/{Model.ImageUrl}")" style="max-height: 100px;" class="img-thumbnail">
                                    <a href="@Url.Content($"~/{Model.ImageUrl}")" target="_blank">Xem ảnh</a>
                                }
                            </div>
                            @Html.ValidationMessage("ImageFile", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Admin" asp-action="ManageTours" class="btn btn-secondary">Quay lại</a>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Hiển thị bản xem trước của ảnh khi chọn file
            $('#imageInput').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#imagePreview').html(`
                            <img src="${e.target.result}" style="max-height: 100px;" class="img-thumbnail">
                            <a href="${e.target.result}" target="_blank">Xem ảnh</a>
                        `);
                    };
                    reader.readAsDataURL(file);
                } else {
                    $('#imagePreview').html('');
                }
            });

            // Tính toán Duration khi thay đổi ngày
            $('#StartDate, #EndDate').change(function() {
                const startDate = new Date($('#StartDate').val());
                const endDate = new Date($('#EndDate').val());

                if (startDate && endDate && startDate <= endDate) {
                    const dayDiff = Math.floor((endDate - startDate) / (1000 * 60 * 60 * 24)) + 1;
                    $('#Duration').val(dayDiff);
                }
            });

            // Kiểm tra ràng buộc khi submit form
            $('form').submit(function(e) {
                const startDate = new Date($('#StartDate').val());
                const endDate = new Date($('#EndDate').val());
                const duration = parseInt($('#Duration').val());
                const availableSeats = parseInt($('#AvailableSeats').val());

                // Kiểm tra ngày đi < ngày về
                if (startDate >= endDate) {
                    alert('Ngày về phải sau ngày đi.');
                    e.preventDefault();
                    return false;
                }

                // Kiểm tra tour không quá 30 ngày
                const dayDiff = Math.floor((endDate - startDate) / (1000 * 60 * 60 * 24)) + 1;
                if (dayDiff > 30) {
                    alert('Tour không được vượt quá 30 ngày.');
                    e.preventDefault();
                    return false;
                }

                // Kiểm tra Duration khớp với ngày đi/về
                if (dayDiff != duration) {
                    alert(`Thời gian tour không khớp với ngày đi và ngày về. Dự kiến: ${dayDiff} ngày`);
                    e.preventDefault();
                    return false;
                }

                // Kiểm tra số chỗ không âm
                if (availableSeats < 0) {
                    alert('Số chỗ không được nhỏ hơn 0.');
                    e.preventDefault();
                    return false;
                }

                return true;
            });
        });
    </script>
}